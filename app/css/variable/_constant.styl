// Typography
//
//
// Styleguide 2

// Typography-size
//
// Main font - $v-font =  Gotham
//.type 	--main	-  = 16px
//
// Markup:
// <span class="{{modifier_class}}">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eos, quidem!</span>
//
// Styleguide 2.1

$main-text-color = #4d5866
$link-color = black
$link-color-visited = grey
$link-color-hover = black

webfont('Caecilia', 'Caecilia', '400')
webfont('Gotham', 'Gotham', 400)
webfont( 'Gotham', 'GothamPro-Light',300)
webfont( 'Gotham', 'GothamPro-Bold',700)

$v-font =  Gotham


$weigh-light = 300
$weigh-normal = 400
$weigh-bold = 700

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

.type--main
	typeSize(26,18)


// Typography-type
//
//.type--italy  - font type italy
//.type--mid  - font type center
//.type--bold - font type bold
//
// Markup:
// <span class="{{modifier_class}}">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eos, quidem!</span>
//
// Styleguide 2.2	

.type--up
	up()
.type--italy
	font-style italic
.type--mid
	text-align center
.type--bold
	font-weight $weigh-bold 
.type--green
	color green
.type--red
	color red
	
a
	text-decoration none
	color $link-color
	
a:hover
	text-decoration none
	color  $link-color-hover
	
