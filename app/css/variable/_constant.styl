btnStyle(bg-btn,color-btn)
	background bg-btn
	color color-btn
	&:hover
		background darken(bg-btn,20)
		color color-btn

btnStyleLight(br-btn,color-btn)
	color color-btn
	border br-btn solid color-btn
	&:hover
		color darken(color-btn,20)
		
.btn
	tr(all)
	padding 25px 40px
	background none
	font-size 23px
	border-radius 4px
	display inline-block
	+below(978px)
		padding 15px 30px
		font-size 16px
	+below(768px)
		padding 10px 20px
		font-size 14px
		
	&:hover
		cursor pointer

.btn--green
	@extend .btn
	btnStyle(green,white)
	border 0px
	border-bottom 2px solid #188947
	

.btn--red
	@extend .btn
	btnStyle(red,white)
	border-bottom 2px solid #e23d4b
	
	
button
	font-family $v-font

